<pu:WindowX
    x:Class="KT.Visitor.Interface.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
    xmlns:sp="clr-namespace:KT.Visitor.Interface.Helpers"
    mc:Ignorable="d"
        Height="700" Width="1240"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" >
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/loginBackground.png"/>
    </Window.Background>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30">
            <Button Click="But_Setting_Click" Style="{DynamicResource Btn_ContentButton}">
                <Image Height="30" Source="/Resources/Images/set.png"/>
            </Button>
            <Button Click="But_Closed_Click" Style="{DynamicResource Btn_ContentButton}">
                <Image Height="30" Source="/Resources/Images/exit.png"/>
            </Button>
        </StackPanel>
        <StackPanel Background="{DynamicResource Scb_Theme08}" Width="972" Height="402" Orientation="Horizontal">
            <!--左面的图片-->
            <StackPanel Orientation="Vertical" Width="486" Height="402"  >
                <StackPanel.Background>
                    <ImageBrush ImageSource="/Resources/Images/logoBackgroup.png"/>
                </StackPanel.Background>
                <Image Source="/Resources/Images/logoWhite.png" Width="116" Height="116" Margin="0,110,0,0" Name="img_logo"/>
                <TextBlock Text="{x:Static sp:StaticProperty.SystemName}" Foreground="{DynamicResource Scb_White01}" FontSize="32" TextAlignment="Center" Margin="0,15,0,0"/>
            </StackPanel>
            <!--右面的输入框-->
            <StackPanel Orientation="Vertical" Width="486" Height="402" Background="#FFFFFF">
                <TextBlock Text="用户登录" FontSize="{DynamicResource FontSize_Large}" FontWeight="Bold" Margin="66,37,0,0"/>

                <TextBox pu:TextBoxHelper.Watermark="请输入账号" 
                     Text="{Binding Account,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                     Width="355"  Height="52" Margin="0,29,0,0" FontSize="{DynamicResource FontSize_Normal}" 
                     pu:IconHelper.Margin="5,10,0,10"
                     pu:TextBoxHelper.CanClear="True"
                     pu:TextBoxHelper.Icon="/Resources/Images/userName.png"
                     pu:TextBoxHelper.ValidationErrorTips="{Binding AccountError}"/>
                <PasswordBox Width="355" Password="" Height="52" Margin="0,22,0,0" FontSize="{DynamicResource FontSize_Normal}" x:Name="txt_pwd" 
                         PasswordChanged="txt_pwd_PasswordChanged"
                         pu:IconHelper.Margin="5,10,0,10"
                         pu:PasswordBoxHelper.CanPlain="True" 
                         pu:PasswordBoxHelper.Watermark="请输入密码" 
                         pu:PasswordBoxHelper.Icon="/Resources/Images/password.png"
                     pu:PasswordBoxHelper.ValidationErrorTips="{Binding PasswordError}"/>
                <!--feixunkeji 123456  kangtadata 123456-->
                <CheckBox Content="记住密码" Margin="66,29,0,0"
                      IsChecked="{Binding IsRememberPassword,Mode=TwoWay}" 
                      Style="{DynamicResource Cb_Style}"/>

                <Button Width="355" Height="48" Content="登录" FontSize="{DynamicResource FontSize_Large}" 
                    Margin="0,30,0,0" 
                    Command="{Binding LoginCommand}"
                    Foreground="{DynamicResource Scb_White01}"
                    pu:ButtonHelper.CornerRadius="4" 
                    Background="{DynamicResource Scb_Theme08}"
                    pu:ButtonHelper.HoverBrush="{DynamicResource Scb_Theme07}"/>

            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <TextBlock Text="Version 1.0.0  2016-2020 QuantaData.All Rights Reserved. 广州康塔科技有限公司" TextAlignment="Center" Foreground="{DynamicResource Scb_White01}" Margin="0,50,0,0" FontSize="12"/>
        </StackPanel>
    </Grid>

</pu:WindowX>
